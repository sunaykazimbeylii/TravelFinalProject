@using TravelFinalProject.Utilities.Enums
@using TravelFinalProject.ViewModels
  @model BookingVM
<!-- BreadCrumb Starts -->
<section class="breadcrumb-main pb-0" style="background-image: url(images/bg/bg8.jpg);">
    <div class="breadcrumb-outer pt-10">
        <div class="container">
            <div class="breadcrumb-content d-md-flex align-items-center pt-10">
                <h2 class="mb-0">Booking</h2>
                <nav aria-label="breadcrumb">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Booking</li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <div class="dot-overlay"></div>
</section>
<!-- BreadCrumb Ends -->
<!-- blog starts -->
<section class="blog trending destination-b pb-6">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xs-12 mb-4">
                <div class="payment-book">
                    <div class="booking-box">
                        <form asp-controller="Booking" asp-action="Create" method="post">
                            @Html.AntiForgeryToken()

                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    <ul>
                                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
                            }

                            @for (int i = 0; i < Model.Guests.Count; i++)
                            {
                                  <h3>Traveller Information @i+1 </h3>
                                <div class="traveller-form">
                                    <label asp-for="@Model.Guests[@i].FirstName">First Name</label>
                                    <input asp-for="@Model.Guests[@i].FirstName" class="form-control" placeholder="Name" />
                                    <span asp-validation-for="@Model.Guests[@i].FirstName"></span>


                                    <label asp-for="@Model.Guests[@i].LastName">Last Name</label>
                                    <input asp-for="@Model.Guests[@i].LastName" class="form-control" placeholder="Surname" />
                                    <span asp-validation-for="@Model.Guests[@i].LastName"></span>

                                    @if (i == 0)
                                    {
                                        <label asp-for="@Model.Guests[@i].Email">Email</label>
                                        <input asp-for="@Model.Guests[@i].Email" class="form-control" placeholder="Email" />
                                        <span asp-validation-for="@Model.Guests[@i].Email"></span>

                                        <label asp-for="@Model.Guests[@i].PhoneNumber">Phone Number</label>
                                        <input asp-for="@Model.Guests[@i].PhoneNumber" class="form-control" placeholder="Phone Number" />
                                        <span asp-validation-for="@Model.Guests[@i].PhoneNumber"></span>
                                    }

                                    <label asp-for="@Model.Guests[@i].PassportNumber">Passport Number</label>
                                    <input asp-for="@Model.Guests[@i].PassportNumber" class="form-control" placeholder="Passport Number" />
                                    <span asp-validation-for="@Model.Guests[@i].PassportNumber"></span>

                                    <label asp-for="@Model.Guests[@i].Gender">Gender</label>
                                    <select asp-for="@Model.Guests[@i].Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
                                        <option value="">Select Gender</option>
                                    </select>
                                    <span asp-validation-for="@Model.Guests[@i].Gender"></span>

                                    <label asp-for="@Model.Guests[@i].Nationality">Nationality</label>
                                    <input asp-for="@Model.Guests[@i].Nationality" class="form-control" placeholder="Nationality" />
                                    <span asp-validation-for="@Model.Guests[@i].Nationality"></span>
                                    <label asp-for="@Model.Guests[@i].DateOfBirth">Date of Birth</label>
                                    <input asp-for="@Model.Guests[@i].DateOfBirth" type="date" class="form-control" />
                                    <span asp-validation-for="@Model.Guests[@i].DateOfBirth"></span>
                                </div>
                            }



                            <input type="hidden" asp-for="TourId" />
                            <input type="hidden" asp-for="AdultsCount" />
                            <input type="hidden" asp-for="ChildrenCount" />
                            <input type="hidden" asp-for="PromoDiscountPercent" />

                           

                            <button type="submit" class="btn btn-primary">Rezervasiya et</button>
                        </form>

                        


                    </div>
                    <div class="customer-information card-information">
                        <h3 class="border-b pb-2 mb-2">Payment Information <small class="font-sm text-muted">/ <i class="fas fa-lock"></i> secure</small></h3>
                        <div class="alert bg-pink p-4 mb-4" role="alert">
                            <h3 class="white mb-1">Congratulations!!!</h3>
                            <p class="lead white mb-1">You've got the best price at just <strong class="font-weight-bold">$60.55</strong> per person</p>
                            <p class="mb-0 white">Prices may go up, so secure your reservation today. </p>
                        </div>
                        <form>
                            <div class="row">
                                <div class="col-md-12">
                                    <h5 class="mb-2">Credit Card</h5>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Card Holder Number</label>
                                        <input type="text">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Card Number</label>
                                        <input type="text">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Expiry Month</label>
                                        <input type="text">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Expiry Year</label>
                                        <input type="text">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>CVC</label>
                                        <input type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="border-t pt-2 mt-1"></div>
                            <div class="row mb-2">
                                <div class="col-md-12">
                                    <h5 class="mb-2">Paypal</h5>
                                </div>
                                <div class="col-md-12">
                                    <p>To make the payment process secure and complete you will be redirected to Paypal Website .</p>
                                    <a href="" class="pink">Checkout via Paypal <i class="fa fa-long-arrow-alt-right"></i></a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="checkbox"> By continuing, you agree to the <a href="#">Terms and Conditions.</a>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-btn">
                                        <a href="#" class="nir-btn">CONFIRM BOOKING</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


            <div class="col-lg-4 col-xs-12 mb-4">
                <div class="sidebar-sticky sticky1">
                    <div class="trend-item mb-4">
                        <div class="trend-image">
                            <img src="~/assets/images/trending/@Model.Booking.Tour.TourImages.FirstOrDefault(t=>t.IsPrimary==true).Image" alt="image">
                        </div>
                        <div class="trend-content-main">
                            <div class="trend-content">
                                <div class="rating-main d-flex align-items-center pb-1">
                                    <div class="rating">
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                    </div>
                                    <span class="ml-2">38 Reviews</span>
                                </div>
                                <h4><a href="#">@Model.Booking.Tour.TourTranslations.FirstOrDefault().Title</a></h4>
                                <p class="mb-0 pink"><i class="fa fa-eye mr-1"></i> 852 Visiting Places <i class="fa fa-map-marker mr-1 ml-3"></i> @Model.Booking.Tour.Destination.DestinationTranslations.FirstOrDefault().Name</p>
                            </div>
                            <div class="trend-last-main">
                                <p class="mb-0 trend-para">@Model.Booking.Tour.TourTranslations.FirstOrDefault().Description</p>
                                <div class="trend-last d-flex align-items-center justify-content-between bg-navy">
                                    <p class="mb-0 white"><i class="fa fa-clock-o" aria-hidden="true"></i>@Model.Booking.Tour.Duration</p>
                                    <div class="trend-price">
                                        <p class="price white mb-0">From <span>$@Model.Booking.Tour.Price</span></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="list-sidebar">
                        <div class="sidebar-item">
                            <h4>Payment</h4>
                            <table>
                                <tbody>
                                    <tr>
                                        <td>Price Per Adult</td>
                                        <td class="pink">@Model.PricePerAdult.ToString("C")</td>
                                    </tr>
                                    <tr>
                                        <td>Number of Adults</td>
                                        <td class="pink">@Model.AdultsCount</td>
                                    </tr>
                                    <tr>
                                        <td>Price Per Child</td>
                                        <td class="pink">@Model.PricePerChild.ToString("C")</td>
                                    </tr>
                                    <tr>
                                        <td>Number of Children</td>
                                        <td class="pink">@Model.ChildrenCount</td>
                                    </tr>
                                    <tr>
                                        <td>Subtotal</td>
                                        <td class="pink">@Model.Subtotal.ToString("C")</td>
                                    </tr>
                                    <tr>
                                        <td>Discount</td>
                                        <td class="pink">-@Model.DiscountAmount.ToString("C")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Total</strong></td>
                                        <td class="pink"><strong>@Model.Total.ToString("C")</strong></td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div> 
        </div>
    </div>
</section>
<!-- blog Ends -->
