@using TravelFinalProject.ViewModels.BlogVM
@model List<BlogVM>
@{
    int count = 0;
}
<!-- BreadCrumb Starts -->
<section class="breadcrumb-main pb-2" style="background-image: url(images/bg/bg8.jpg);">
    <div class="dot-overlay"></div>
</section>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="dashboard-list-box with-icons">
        <div class="dashboard-title">
            <h4 class="mb-0">Blog DashBoard</h4>
            <a asp-action="create" class="btn btn-success">Create</a>

        </div>
        <div class="table-responsive table-desi">
            <table class="basic-table table table-hover">
                <thead>
                    <tr>

                        <th>No</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th rowspan="2">Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (BlogVM blog in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td><img style="width:150px; height:100px;" src="~/assets/images/blog/@blog.ImageUrl" /></td>
                            <td>@blog.Title</td>
                            <td>@blog.Content</td>
                            <td style="display: flex; gap: 10px;">
                                <a asp-action="delete" asp-route-id="@blog.Id" class="btn"><i class="fa fa-trash-alt text-danger" aria-hidden="true"></i></a>
                                <a asp-action="update" asp-route-id="@blog.Id" class="btn">  <i class="fa fa-pencil-square-o text-success" aria-hidden="true"></i></a>
                            </td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

