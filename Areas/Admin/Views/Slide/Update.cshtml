@model UpdateSlideVM
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="dashboard-content">
        <div class="add-listing">
            <div class="listing-main">
                <div class="addlist-inner mb-3">
                    <div class="addlist-title">
                        <h4 class="m-0"><i class="fa fa-user pr-2"></i>Destination Update</h4>
                    </div>
                    <div class="addlist-content bg-white">
                        <form method="post" enctype="multipart/form-data">

                            <div class="row">
                                <div class="col-lg-12 col-md-6 col-xs-12">
                                   
                                        <div class="form-group">
                                            <div class="input-box">
                                                <img style="width:150px; height:100px;" src="~/assets/images/slider/@Model.Image" />
                                                <input type="hidden" asp-for="Image" class="form-control" />

                                            </div>
                                    <div class="form-group">
                                        <div class="input-box">
                                            <label asp-for="Photo" class="form-label">Photo</label>
                                            <input asp-for="Photo" class="form-control" />
                                            <span asp-validation-for="Photo" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-box">
                                            <label asp-for="Title" class="form-label">Title</label>
                                            <input asp-for="Title" class="form-control" placeholder="Title" />
                                            <span asp-validation-for="Title" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-box">
                                            <label asp-for="Subtitle" class="form-label">Subtitle</label>
                                            <input asp-for="Subtitle" class="form-control" placeholder="Subtitle" />
                                            <span asp-validation-for="Subtitle" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-box">
                                            <label asp-for="ButtonText" class="form-label">Button Text</label>
                                            <input asp-for="ButtonText" class="form-control" placeholder="Button Text" />
                                            <span asp-validation-for="ButtonText" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-box">
                                            <label asp-for="ButtonUrl" class="form-label">Button Url</label>
                                            <input asp-for="ButtonUrl" class="form-control" placeholder="Button Url" />
                                            <span asp-validation-for="ButtonUrl" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-box">
                                            <label asp-for="Order" class="form-label">Order</label>
                                            <input asp-for="Order" class="form-control" placeholder="Order" />
                                            <span asp-validation-for="Order" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label>Show in Home Page?</label>
                                            <input asp-for="IsActive" type="checkbox" />
                                        </div>
                                    </div>
                                </div>


                            </div>

                            <button type="submit" class="btn btn-primary mt-3">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
