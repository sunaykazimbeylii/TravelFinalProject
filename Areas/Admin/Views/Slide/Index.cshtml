@model List<GetSlideVM>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="dashboard-list-box with-icons">
        <div class="dashboard-title">
            <h4 class="mb-0">Slide DashBoard</h4>
            <a asp-action="create" class="btn btn-success">Create</a>

        </div>
        <div class="table-responsive table-desi">
            <table class="basic-table table table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Subtitle</th>
                        <th>Button Text</th>
                        <th>Button Url</th>
                        <th>IsActive</th>

                        <th rowspan="2">Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (GetSlideVM slideVM in Model)
                    {
                        <tr>

                            <td><img style="width:150px; height:100px;" src="~/assets/images//trending/@slideVM.ImageUrl" /></td>
                            <td>@slideVM.Title</td>
                            <td>@slideVM.Subtitle</td>
                            <td>@slideVM.ButtonText</td>
                            <td>@slideVM.ButtonUrl</td>
                            <td>@slideVM.IsActive</td>
                            <td style="display: flex; gap: 10px;">

                                <a asp-action="delete" asp-route-id="@slideVM.Id" class="btn"><i class="fa fa-trash-alt text-danger" aria-hidden="true"></i></a>
                                <a asp-action="update" asp-route-id="@slideVM.Id" class="btn">  <i class="fa fa-pencil-square-o text-success" aria-hidden="true"></i></a>
                            </td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>