@model UpdateDestinationCategoryVM

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="dashboard-content">
        <div class="add-listing">
            <div class="listing-main">
                <div class="addlist-inner mb-3">
                    <div class="addlist-title">
                        <h4 class="m-0"><i class="fa fa-user pr-2"></i>Destinaton Category Update</h4>
                    </div>
                    <div class="addlist-content bg-white">
                        <form method="post">
                            <div class="d-flex justify-content-center align-items-center row">
                                <div class="col-lg-12 col-md-6 col-xs-12">
                                    <div class="form-group">
                                        <div class="input-box">
                                            <label asp-for="Name" class="form-label">Name</label>
                                            <input asp-for="Name" class="form-control" placeholder="..." />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <button type="submit" class="btn btn-primary mt-12">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>